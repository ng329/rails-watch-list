<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRDIX6RiIX2SQfiXF1G_yPz0SKN5n6JDGyU8Q&usqp=CAU);">
  <div class="container">
    <h1>Movies List</h1>
  </div>
</div>


<div class="lists-all">
  <div class="list-text">
    <h4>My Lists:</h4>
    <%= link_to "Create a new list", new_list_path, class:"btn btn-flat"%>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?movie)">
        <%=link_to list.name, list_path(list)%>
      </div>
    <% end %>
  </div>
</div>

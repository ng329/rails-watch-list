<%= render "shared/banner" %>

<div class="lists-all">
  <div class="list-text">
    <h4>My Lists:</h4>
    <button><%= link_to "Create a new list", new_list_path, class:"btn btn-flat"%></button>
  </div>
  <div class="lists-card-flex">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?movie)">
        <%=link_to list.name, list_path(list)%>
      </div>
    <% end %>
  </div>
</div>

<div class="banner"
      style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
      url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="list-all">
  <div class="list-text">
    <%= link_to "Back to lists", lists_path, class:"btn btn-flat"%>
  </div>
  <div class="cards">
    <% @list.movies.each do |movie| %>
    <%# change to product cards %>
      <div class="card-product">
        <img src=<%=movie.poster_url%> />
        <div class="card-product-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="new-bookmark-box">
  <h3>Create new bookmark</h3>
  <div class="form-box">
    <div class="form-new-bookmark">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

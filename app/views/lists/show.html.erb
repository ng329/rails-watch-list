<h1><%= @list.name %></h1>

<% @list.movies.each do |movie| %>
  <div class="card-product">
    <img src=<%=movie.poster_url%> />
    <div class="card-product-infos">
      <%# add movie link when controller added %>
        <h2><%= movie.title %></h2>
        <p><%= movie.overview %></p>
    </div>
  </div>
<% end %>


<div>
  <%= link_to "View bookmarks", list_bookmarks_path(@list)%>
</div>

<div>
  <%= link_to "return to lists", lists_path%>
</div>
